{
  "name": "advent",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "standardx \"src/**/*.{ts,tsx}\"",
    "lint:fix": "standardx \"src/**/*.{ts,tsx}\" --fix",
    "prettier": "prettier --config .prettierrc -c \"src/**/*.{ts,tsx}\"",
    "prettier:fix": "prettier --config .prettierrc -w \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc",
    "tidy": "npm run lint:fix && npm run prettier:fix && npm run typecheck",
    "checktidy": "npm run lint && npm run prettier && npm run typecheck && npm run test:ci",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "nuno.cardoso@gmail.com",
  "license": "ISC",
  "dependencies": {
    "cli-color": "^2.0.3",
    "console-log-level": "^1.4.1",
    "lodash": "^4.17.21",
    "md5.js": "^1.3.5"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.5",
    "@types/lodash": "^4.14.201",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "standardx": "^7.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "root": true,
    "rules": {
      "no-labels": [
        "error",
        {
          "allowLoop": true
        }
      ]
    }
  }
}
