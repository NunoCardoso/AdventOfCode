{
  "name": "advent",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "makeDay": "ts-node makeDay.ts",
    "day": "NODE_OPTIONS=--huge-max-old-generation-size ts-node runDay.ts",
    "year": "NODE_OPTIONS=--huge-max-old-generation-size ts-node runYear.ts",
    "lint": "standardx \"src/**/*.{ts,tsx}\"",
    "lint:fix": "standardx \"src/**/*.{ts,tsx}\" --fix",
    "prettier": "prettier --config .prettierrc -c \"src/**/*.{ts,tsx}\"",
    "prettier:fix": "prettier --config .prettierrc -w \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc",
    "tidy": "npm run lint:fix && npm run prettier:fix && npm run typecheck",
    "checktidy": "npm run lint && npm run prettier && npm run typecheck && npm run test:ci",
    "test": "jest"
  },
  "author": "nuno.cardoso@gmail.com",
  "license": "ISC",
  "dependencies": {
    "cli-color": "^2.0.4",
    "console-log-level": "^1.4.1",
    "js-combinatorics": "^2.1.2",
    "lodash": "^4.17.21",
    "spark-md5": "^3.0.2"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.6",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "standardx": "^7.0.0",
    "ts-jest": "^29.1.3",
    "tsconfig-paths": "^4.2.0"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "newline-per-chained-call": 0,
      "no-labels": [
        "error",
        {
          "allowLoop": true
        }
      ]
    }
  }
}
